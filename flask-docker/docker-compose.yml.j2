version: "3.7"
services:
  app:
    build:
      context: .
      args:
        POETRY_EXPORT_ARGS: "--dev"
        GUNICORN_ARGS: "--reload"
    container_name: {{ project_name_underscore }}
    ports:
      - "7000:80"
    volumes:
      - ./:/app
    environment:
      - FLASK_ENV=development
      - FLASK_RUN_PORT=80
      - SECRET_KEY=12345678
